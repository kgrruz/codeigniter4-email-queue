{
    "name": "kgrruz/codeigniter4-email-queue",
    "type": "library",
  	"description": "Queue, preview and and send emails stored in the database",
  	"keywords": [
  		"codeigniter",
  		"codeigniter4",
  		"email",
  		"queue",
  		"cron"
  	],
  	"homepage": "https://github.com/kgrruz/codeigniter4-email-queue",
  	"license": "MIT",
  	"authors": [
  		{
  			"name": "Kleber ruz",
  			"email": "ruzkleber@gmail.com",
  			"role": "Developer"
  		}
  	],
  	"require": {
          "php": "^7.4 || ^8.0",
          "codeigniter4/settings": "^2.0"
      },
      "autoload": {
        "psr-4": {
          "EmailQueue\\": "src"
        },
        "exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
      },
      "require-dev": {
        "codeigniter4/codeigniter4": "dev-develop",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
